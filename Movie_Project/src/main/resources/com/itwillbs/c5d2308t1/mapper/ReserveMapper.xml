<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwillbs.c5d2308t1.mapper.ReserveMapper">

	<select id="selectMovietitle">
		SELECT movie_title 
		FROM movies
	</select>
	<select id="selectTheaterName">
		SELECT theater_name 
		FROM theaters
	</select>
	<select id="selectPlayDate_PlayTime">
<!-- 		SELECT DATE_FORMAT(play_start_time,"%H:%i") play_start_time, DATE_FORMAT(play_date,'%a %d') play_date  -->
		SELECT DISTINCT play_date, play_start_time
		FROM plays
	</select>
	<select id="selectSeatName">
		SELECT seat_name
		FROM seats 
		WHERE play_id =(SELECT play_id
						FROM plays 
						WHERE play_date = #{play_date}
						AND play_start_time = #{play_start_time});
	</select>
	
	
</mapper>